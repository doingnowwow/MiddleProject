					if(del_re < 0) {
						System.out.println("삭제 안됨..");
						errMsg("실패!", "삭제가 안된 원인을 찾아보세요.."); 
					}
				} catch (RemoteException e1) {
					e1.printStackTrace();
				}
	       });

	         
		});	
			
	

	
