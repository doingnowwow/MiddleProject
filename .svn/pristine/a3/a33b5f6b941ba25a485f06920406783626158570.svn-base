<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="389.0" prefWidth="407.0" style="-fx-background-color: #0B243B;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="kr.or.ddit.service.chat.ChatController">
   <top>
      <Pane prefHeight="50.0" prefWidth="400.0" style="-fx-background-color: #0B243B; -fx-background-radius: 10;" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="81.0" layoutY="4.0" text="♥무엇이든 물어보세요♥" textAlignment="CENTER" textFill="WHITE">
               <font>
                  <Font name="Tunga Bold" size="22.0" />
               </font></Label>
         </children>
      </Pane>
   </top>
   <center>
      <Pane prefHeight="263.0" prefWidth="400.0" BorderPane.alignment="CENTER">
         <children>
            <TextArea fx:id="taChatList" layoutX="20.0" layoutY="5.0" prefHeight="275.0" prefWidth="358.0" style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-border-color: #0B243B; -fx-border-radius: 10;" />
         </children>
      </Pane>
   </center>
   <bottom>
      <HBox alignment="CENTER" spacing="4.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="tfChat" prefHeight="39.0" prefWidth="230.0" style="-fx-background-color: #ffffff; -fx-border-radius: 8; -fx-border-color: #0B243B;">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets bottom="10.0" right="5.0" />
               </HBox.margin></TextField>
            <Button mnemonicParsing="false" onAction="#sendMessage" prefHeight="29.0" prefWidth="58.0" style="-fx-background-color: #CEECF5; -fx-background-radius: 10; -fx-border-color: #CEECF5; -fx-border-radius: 10;" text="전송" textFill="#250303">
               <HBox.margin>
                  <Insets bottom="10.0" right="5.0" />
               </HBox.margin></Button>
            <Button mnemonicParsing="false" onAction="#disconnect" prefHeight="29.0" prefWidth="58.0" style="-fx-background-color: #ffffff; -fx-background-radius: 10; -fx-border-color: #9a9a9a; -fx-border-radius: 10;" text="종료">
               <HBox.margin>
                  <Insets bottom="10.0" right="5.0" />
               </HBox.margin></Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
